---
import { sanityClient } from "sanity:client";


const content_slugs = await sanityClient.fetch(`*[_type == "page"]`);




---

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>


<button id="dropdownHoverButton" data-dropdown-toggle="dropdownHover" data-dropdown-trigger="hover" class="transition ease-in delay-0 duration-50  hover:text-[#d7d9de] hover:underline "><a href="/whatwecandoforyou">What We Can Do For You</a>
  </button>
  
  <!-- Dropdown menu -->
  <div id="dropdownHover" class="z-10 hidden  bg-white/[0.90] divide-y divide-gray-100 shadow w-55">
      <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownHoverButton">
        {content_slugs.map((data) => {
          
            return(

            <li>
              <a href={`/whatwedo/${data.slug.current}`} class="block px-4 py-2 hover:bg-gray-100 dark:hover:text-black">{data.title}</a>
            </li>
            
            )

        })}
       
      </ul>
  </div>
  